<div class="container">
     <div class="row">
    	<div class="col-lg-3">

			<%= render 'users/list', user: @user, book_new: @book_new %>
		</div>

        <div class="col-lg-9">
          	<table class="table table-striped"> 
				<h1>Books</h1>
				<thead>
					<tr>
							<th></th>
							<th class="index-books-title">Title</th>
							<th class="index-books-opinion">opinion</th>
							<th></th>
							<th></th>
							<th></th>
					</tr>
				</thead>

				<tbody>

					<% @books.each do |book| %>

						<tr>
							<td> <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no-image.jpg" %></td>
							<td><%= book.title %></td>
							<td><%= book.body %></td>
							<td><%= link_to "Show", book_path(book),class:"show_#{book.id}" %></td>
						</tr>

					<% end %>
				</tbody>

			</table>
		</div>
	 </div>
</div>