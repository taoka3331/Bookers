

<table>
<h1>Books</h1>
<thead>

<tr>
		<th>Title</th>
		<th>opinion</th>
		<th></th>
		<th></th>
		<th></th>
</tr>

</thead>

<tbody>

<% @books.each do |book| %>

	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book),class:"show_#{book.id}" %></td>
		<td><%= link_to "Edit", edit_book_path(book),class:"edit_#{book.id}" %></td>
		<td><%= link_to "Destroy", destroy_book_path(book.id),method: :delete, "date-confirm" => "本当に削除しますか?",class:"destroy_#{book.id}"%></td>
	</tr>
<% end %>
</tbody>

</table>


<h2> New book</h2>

<% @book.errors.full_messages.each do |message| %>
	<div class="form-error">
		<%= message %>
	</div>
<% end %>

<%= form_for(@book) do |f| %>

<h1>Title</h1>
<%= f.text_field :title, class:"book_title"  %>
<h1>Body</h1>
<%= f.text_area :body, class:"book_body" %>

<%= f.submit "Creat Book" %>

<% end %>



