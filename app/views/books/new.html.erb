<table>
<h1>Books</h1>
<thead>

<tr>
		<th>Title</th>
		<th>BOdy</th>
		<th></th>
		<th></th>
		<th></th>
</tr>

</thead>

<tbody>

<% @books.each do |book| %>

	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", destroy_book_path(book.id),method: :delete, "date-confirm" => "本当に削除しますか?" %></td>
	</tr>
<% end %>
</tbody>

</table>


<h2> New book</h2>

<% @book.errors.full_messages.each do |message| %>
	<div class="form-error">
		<%= message %>
	</div>
<% end %>

<%= form_for(@book) do |f| %>

<h1 class="book_title">Title</h1>
<%= f.text_field :title  %>
<h1 class="book_body">Body</h1>
<%= f.text_area :body  %>

<%= f.submit "Creat Book" %>

<% end %>



